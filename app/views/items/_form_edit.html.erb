<%= form_for(@item, :url => "/items/#{@item.id}/update", method: :post) do |f| %>
	<%= f.label :name %>
  	<%= f.text_field :name %>
  	<br/><br/>

  	<%= f.label :price %>
  	<%= f.number_field :price %>
  	<br/><br/>

  	<%= f.label :unit %>
  	<%= f.text_field :unit %>
  	<br/><br/>

  	<%= f.label :subcategory_id %>
  	<%= f.text_field :subcategory_id %>
  	<br/><br/>

	<%= f.submit %>

<% end %>