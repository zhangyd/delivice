<h1>Items index</h1>

<ul>
	<% @items.each do |item| %>
		<li>
			<%= item.name %>
			<%= item.price %>
			<%= item.subcategory_id %>
			<%= item.unit %>
			<%= link_to 'Show', item %>
        	<%= link_to 'Edit', edit_item_path(item) %>
        	<%= link_to 'Delete', item_path(item) , :method => :delete %>
		</li>
	<% end %>
</ul>

