<html>
	<head>
		<title>Delivice</title>
	</head>

	<body>
	

	<div class = "storenavigation">
		<ul>	
			<a href="/"><h2>Delivice</h2></a>
					<li id="cart_icon"><%= image_tag 'cart.png', size: "40x40" %></li>
					<li id="current_store"><%= link_to "#{Store.find(params[:id]).name}" %></li>
					<li id="switch"><%= link_to 'switch store', stores_path() %></li>
			<span id="upper_right">	
				<% if user_signed_in? %>
					<li><%= link_to "Cart (#{current_user.carts.last.items.size})", "/carts/#{current_user.carts.last.id}"%></li>		
					<li><%= "Welcome, #{current_user.first_name}" %></li>
					<li><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></li>
				<% else %>
					<li><%= link_to "Sign Up", new_user_registration_path %></li>
					<li><%= link_to "Sign In", new_user_session_path %></li>
				<% end %>
			</span>
		</ul>
	</div>


		<div class = "cateonleft">
			<ul>
				<% @categories.each do |category| %>
				<li>
					<%= link_to category.name, category %>
					<span class ="hidesub">More</span>
					<ul class ="sub">
						<% category.subcategories.each do |subcategory| %>
						<li><%= link_to subcategory.name, subcategory %></li>
						<% end %>
					</ul>
				</li>
				<% end %>
			</ul>
		</div>


		<div id = "popitems">
			<ul>
				<% @subcategories[0].items.each do |item| %>
					<li>
						<%= image_tag item.picture.url(:thumb) %>
						<p><%= item.name %></p>
						<span><%= item.unit %></span>
						<span><%= "$#{item.price}"%></span>
						<p><%= link_to 'Add', "/ownerships?item_id=#{item.id}&cart_id=#{current_user.carts.last.id}", method: :post %></p>
						<p><%= link_to 'Remove', "/ownerships/:id?item_id=#{item.id}&cart_id=#{current_user.carts.last.id}", method: :delete %></p>
					</li>
				<% end %>
			</ul>

		</div>


	</body>

</html>